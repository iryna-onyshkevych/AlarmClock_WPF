<Window x:Class="AlarmClock.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AlarmClock"
        mc:Ignorable="d"
        Title="AlarmClock" Height="450" Width="800">
    <Window.Resources>
        <SolidColorBrush x:Key="brashBackground" Color="Bisque"></SolidColorBrush>
        <SolidColorBrush x:Key="brashtwoBackground" Color="Gainsboro"></SolidColorBrush>
    </Window.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition ></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>

        <Menu Height="20" VerticalAlignment="Top" Background="LightBlue">
            <MenuItem Header="Settings">
                <MenuItem Header="Sound" Click="Alarmclock_list"></MenuItem>
                <MenuItem Header="Theme" Click="Alarmclock_list"></MenuItem>
            </MenuItem>
        </Menu>

        <StackPanel Grid.Row="0" Orientation="Horizontal" HorizontalAlignment="Left" Margin="40 40 0 0"  Background="LightBlue" >
            <DatePicker HorizontalAlignment="Left" VerticalAlignment="Center" Name="Calendar" FirstDayOfWeek="Monday" IsTodayHighlighted="False"/>

            <StackPanel Orientation="Horizontal"  Margin="0,0,0,0.4" Background="LightBlue" >
                <StackPanel VerticalAlignment="Center" Margin="5">
                    <Button x:Name="btnHoursUp" Margin="5" Height="18" FontFamily="Marlett" FontSize="20" Content="5" Width="50" Click="btnHoursUp_Click" Background="Lavender"/>
                    <Button x:Name="btnHoursDown" Margin="5" Height="18"  FontFamily="Marlett" FontSize="20" Content="6" Width="50"  Click="btnHoursDown_Click" Background="Lavender"/>
                </StackPanel>
                

                <TextBox x:Name="Hours" Focusable="False" Text="12" Height="38" Width="45" FontSize="23" />
                <TextBox Text=":" FontSize="28" Height="38"  Focusable="False"/>
                <TextBox x:Name="Minutes" Focusable="False" Height="38" Width="45" FontSize="23" Text="0" TextAlignment="Center"/>
                <StackPanel VerticalAlignment="Center" Margin="5">
                    <Button x:Name="btnMinUp" Margin="5" Height="18" Width="50" FontFamily="Marlett" FontSize="20" Content="5" MouseDown="btnMinUp_Click" Click="btnMinUp_Click" Background="Lavender"/>
                    <Button x:Name="btnMinDown" Margin="5" Height="18" Width="50" FontFamily="Marlett" FontSize="20" Content="6"  Click="btnMinDown_Click" Background="Lavender"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal" Height="120" Width="125" VerticalAlignment="Bottom" HorizontalAlignment="Center" Background="LightBlue">
                    <Button Height="30" Width="30" Background="LightPink" Content="on" HorizontalAlignment="Left" Margin="10" Click="Button_Click"></Button>
                    <Button Height="30" Width="30" Background="LightGoldenrodYellow" Content="off" HorizontalAlignment="Center" Click="Button_Click_1"></Button>
                    <Button Height="30" Width="30" Background="LightPink" Content="add" HorizontalAlignment="Left" Margin="10,0,10,0" Click="Button_Click_2"></Button>

                </StackPanel>
            </StackPanel>
            
        </StackPanel>
        <StackPanel Grid.Row="1">
            <Grid>
                <Label Name="TimeLabel" FontSize="48" HorizontalAlignment="Left" VerticalAlignment="Bottom" />
                <DataGrid  Height="148" HorizontalAlignment="Right" Margin="20,20,20,20" Name="dataGrid1" VerticalAlignment="Top" Width="225" />
                <Button Click="Button_Click_5" Width="45" Height="25" Margin="105,5,5,5" Background="AliceBlue" >Update</Button>
                <Button Click="Button_Click_6" Width="45" Height="25" Margin="5" HorizontalAlignment="Center" Background="AliceBlue" >Delete</Button>
            </Grid>
            <!--<Slider x:Name="sondslider" VerticalAlignment="Bottom" Height="30" 
       ValueChanged="Slider_ValueChanged" Value="0.75" Maximum="1" >
                </Slider>-->
        </StackPanel>

    </Grid>
</Window>
