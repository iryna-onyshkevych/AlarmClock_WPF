<Window x:Class="AlarmClock.SoundSettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AlarmClock"
        mc:Ignorable="d"
        Title="SoundSettingsWindow" Height="450" Width="800">
    <Grid>
        <ComboBox Name="themeList" Height="30" VerticalAlignment="Top">
            <TextBlock x:Name="theme1">Theme1</TextBlock>
            <TextBlock x:Name="theme2">Theme2</TextBlock>
        </ComboBox>
        <Slider x:Name="sondslider" VerticalAlignment="Bottom" Height="30" 
       ValueChanged="Slider_ValueChanged" Value="0.55" Maximum="1" />
    </Grid>
</Window>
